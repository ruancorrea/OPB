<header class="bannercbc">
  <h1>Ajustes
  </h1>
</header>


<div class="container">
    <div class="row">
        <div id="loginbox" style="margin-top:50px;" class="mainbox col-md-4 col-md-offset-3 col-sm-8 col-sm-offset-2">
        <div class="card card-header">
            <div class="card-title">
                <h4><strong>Alteração da senha</strong></h4>
            </div>
        </div>                    
        <div class="card card-info" >   

                <div style="padding-top:30px" class="card-body" >

                    <div style="display:none" id="login-alert" class="alert alert-danger col-sm-12"></div>
                        
                    <form action="/usuarios/alterarsenha" method="POST" id="loginform" class="form-horizontal" role="form">
                                
                        <div style="margin-bottom: 25px" class="input-group mb-3">
                            <span class="input-group-text" id="basic-addon1"><i class="fa fa-key"></i></span>
                            <input id="senha" type="password" class="form-control" name="senha" required value=""  placeholder="Digite sua nova senha">
                            <span class="input-group-text" id="basic-addon1">    
                                <div class="olho" id="olho1"><i  class="fa fa-eye-slash"></i></div>
                                <div class="olho" id="olho2" style="display: none;"><i class="fa fa-eye" ></i></div>
                            </span>  
                        </div>

                        <div style="margin-bottom: 25px" class="input-group mb-3">
                            <span class="input-group-text" id="basic-addon1"><i class="fa fa-unlock"></i></span>
                            <input id="senha2" type="password" class="form-control" name="senha2" required value=""  placeholder="Digite novamente">
                            <span class="input-group-text" id="basic-addon1">    
                                <div class="olho" id="olho5"><i  class="fa fa-eye-slash"></i></div>
                                <div class="olho" id="olho6" style="display: none;"><i class="fa fa-eye" ></i></div>
                            </span>                                                                                  
                        </div>

                            <div style="margin-top:10px" class="form-group">
                                <!-- Button -->

                                <div class="col-sm-12 controls">
                                    <button class="btn btn-outline-success" type="submit" style="display: block; float: right;">Salvar</button>
                                </div>
                            </div>   
                        </form>     


                    </div>                     
                </div>  
    </div>
    </div>
</div>